Name     MemIODecoder ; 
PartNo   00 ; 
Date     10/10/10 ;
Revision 01 ;
Designer Engineer ;
Company  None ;
Assembly None ; 
Location  ;
Device   p22v10 ;

/* input pins */
PIN 2 = a15;
PIN 3 = a14;
PIN 4 = a4; /* DART */
PIN 5 = a5; /* bank switching */
PIN 6 = a6; /* ym2413 */
PIN 7 = a7; /* expansion port */
PIN 8 = memrq;
PIN 9 = iorq;
PIN 10 = m1;
pin 11 = wr;

/* output pins */
PIN 15 = romSel;
PIN 16 = ramSel;
pin 17 = dartSel;
pin 18 = ym2413Sel;
pin 19 = ioExpansionSel;
pin 20 = intAck;
pin 21 = bankSwitchIn;
pin 22 = bankSwitchOut;

romSel = a15 # memrq;
ramSel = !a15 # memrq;
dartSel = a4 # iorq;
ym2413Sel = a6 # iorq; 
ioExpansionSel = a7 # memrq;
intAck = iorq # m1;
bankSwitchIn = !(a5 # iorq # wr);
bankSwitchOut = !a15 # !a14;



