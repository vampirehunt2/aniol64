/* Inputs */
PIN 2 = A4;
PIN 3 = A5;
PIN 4 = A15;
PIN 5 = IORQ;
PIN 6 = MEMRQ;
PIN 7 = RD;
PIN 8 = WR;

/* Outputs */
PIN 12 = KBDRD;
PIN 13 = LCDE;
PIN 14 = BZRWR;
PIN 15 = ROMSEL;
PIN 16 = RAMSEL;

/* Formulas */
KBDRD = A4 # IORQ # RD;
LCDE = A5 # IORQ;
BZRWR = A4 # IORQ # WR;
ROMSEL = A15 # MEMRQ;
RAMSEL = !A15 # MEMRQ;

