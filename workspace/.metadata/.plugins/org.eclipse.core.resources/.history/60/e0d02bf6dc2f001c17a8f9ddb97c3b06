Name     MemIODecoder ; 
PartNo   00 ; 
Date     10/10/10 ;
Revision 01 ;
Designer Engineer ;
Company  None ;
Assembly None ; 
Location  ;
Device   g16v8 ;

/* input pins */
PIN 1 = a15;
PIN 2 = a14;
PIN 3 = a4; /* DART */
PIN 4 = a5; /* bank switching */
PIN 5 = a6; /* ym2413 */
PIN 6 = a7; /* expansion port */
PIN 7 = memrq;
PIN 8 = iorq;
PIN 9 = m1;
pin 11 = wr;

/* output pins */
PIN 12 = romSel;
PIN 13 = ramSel;
pin 14 = dartSel;
pin 15 = ym2413sel;
pin 16 = ioExpansionSel;
pin 17 = bankSwitchIn;
pin 18 = bankSwitchOut;

romsel = !a15 # memrq;
ramsel = a15 # memrq;
dartsel = !a4 # memrq;




